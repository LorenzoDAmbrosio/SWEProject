<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root prefHeight="200.0" prefWidth="200.0"
         style="-fx-background-color: #37004D; -fx-background-radius: 20;"
         fx:controller="com.project.sweprojectspring.components.FilmComponent"
         type="Pane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <VBox alignment="TOP_CENTER" prefHeight="206.0" prefWidth="200.0" spacing="2.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <children>
                    <Label fx:id="filmTitle" alignment="CENTER" contentDisplay="CENTER" prefHeight="13.0" prefWidth="227.0" text="Nome Film" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font></Label>
                    <HBox prefHeight="40.0" prefWidth="160.0">
                        <children>
                            <Label fx:id="filmAuthor" contentDisplay="CENTER" prefHeight="72.0" prefWidth="247.0" text="Autore" textFill="WHITE" />
                            <Label fx:id="filmYear" alignment="CENTER_RIGHT" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="72.0" prefWidth="247.0" text="Anno" textAlignment="RIGHT" textFill="WHITE" />
                        </children>
                    </HBox>
                    <Label fx:id="filmDescription" alignment="CENTER" contentDisplay="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="35.0" prefWidth="160.0" text="descrizione" textFill="WHITE" />
                    <Button fx:id="detailButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="240.0" style="-fx-background-color: WHITE;" text="Dettaglio" textFill="#63105f" />
                </children>
            </VBox>
        </children>
</fx:root>
